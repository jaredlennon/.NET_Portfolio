@model Exercises.Models.Data.State

@{
    ViewBag.Title = "Add State";
}

<div class="row">
    <div class="col-xs-12">
        <h3>Add State</h3>
        @Html.ActionLink("Return to List","States","Admin")
        <p></p>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                <label>State Abrr.</label>
                @Html.TextBoxFor(m=>m.StateAbbreviation, new { @class = "form-control", placeholder = "State Abrr." })
                <label>State Name</label>
                @Html.TextBoxFor(m=>m.StateName, new {@class="form-control", placeholder="State Name" })
            </div>
            <button type="submit" class="btn btn-sm btn-primary">Save</button>
        }
    </div>
</div>